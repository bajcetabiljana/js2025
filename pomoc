function rollAdice(){
    let inputValue = input.value;
   
    if(diceValue1 == 1){
        result1.textContent = "You got 1";
    }
    


    switch(inputValue){
        case "1":
            result1.textContent = diceValue1;
            break;
        case "2":
            result1.textContent = diceValue1;
            result2.textContent = diceValue2;
            break;
        case "3":
        result1.textContent = diceValue1;
        result2.textContent = diceValue2;
        result3.textContent = diceValue3;
            break;
        case "4":
        result1.textContent = diceValue1;
        result2.textContent = diceValue2;
        result3.textContent = diceValue3;
        result4.textContent = diceValue4;
            break;
        case "5":
        result1.textContent = diceValue1;
        result2.textContent = diceValue2;
        result3.textContent = diceValue3;
        result4.textContent = diceValue4;
        result5.textContent = diceValue5;
            break;
        case "6":
        result1.textContent = diceValue1;
        result2.textContent = diceValue2;
        result3.textContent = diceValue3;
        result4.textContent = diceValue4;
        result5.textContent = diceValue5;
        result6.textContent = diceValue6;
            break;
        
    }
}



